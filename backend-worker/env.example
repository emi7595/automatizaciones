# Environment Variables for WhatsApp Automation Worker
# Copy this file to .env and fill in your actual values

# Database Configuration
# For local development:
DATABASE_URL=postgresql://user:password@localhost/automatizaciones

# For production (Render), this will be automatically set by Render:
# DATABASE_URL=postgresql://username:password@hostname:port/database
# Render automatically provides this environment variable when you add a PostgreSQL service

# WhatsApp Cloud API Configuration
WHATSAPP_TOKEN=your_whatsapp_access_token_here
PHONE_NUMBER_ID=your_phone_number_id_here
BUSINESS_ID=your_business_id_here
WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production

# Redis Configuration (for background tasks)
REDIS_URL=redis://localhost:6379

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# Backend API Configuration
BACKEND_API_URL=http://localhost:8000

# Application Configuration
APP_NAME=WhatsApp Automation Worker
DEBUG=true
ENVIRONMENT=development
